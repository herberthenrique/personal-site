.img-company
	max-height 100%
	max-width 100%
	margin 0 auto
	position absolute
	top 0
	left 0
	width auto
	height auto
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	margin auto
	padding 22px

.experience
	text-align center
	h2.subtitle
		color titles-color
		font-family default-font
		font-size subtitle-size
		font-weight bold-weight
		margin-bottom 45px
		margin-top 75px
	.company-wrapper
		lost-utility clearfix
		.company-item
			lost-column 1/2
			height 300px
			margin-bottom 40px
			+below($screen-md)
				lost-column 1/1
				margin-top 45px
		.company-name
			color brand-primary
			font-size subtitle-size
			font-weight bold-weight
			line-height title-size
		.company-description
			color text-color
			font-size 1.6rem
			font-weight normal-weight

	.plus-experience
		margin-bottom 35px
		margin-top 55px


.company-image
	border 1px solid text-color
	width 360px
	margin 0 auto
	height 170px
	position relative
